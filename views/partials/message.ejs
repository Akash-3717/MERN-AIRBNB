<% if (typeof successMessage !== 'undefined' && successMessage) { %>
  <div class="mb-4 p-3 bg-green-100 text-green-800 rounded" style="margin-bottom:1rem;padding:0.75rem;background:#d1fae5;color:#065f46;border-radius:0.375rem;">
    <%= successMessage %>
  </div>
<% } %>

<% if (typeof errorMessages !== 'undefined' && errorMessages && errorMessages.length) { %>
  <div class="mb-4 p-3 bg-red-100 text-red-800 rounded" style="margin-bottom:1rem;padding:0.75rem;background:#fee2e2;color:#991b1b;border-radius:0.375rem;">
    <ul class="list-disc pl-5" style="margin:0;padding-left:1.25rem;">
      <% errorMessages.forEach(function(msg){ %>
        <li><%= msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>
