<%- include('../partials/head') %>
  </head>
  <body class="bg-gray-100">
    <%- include('../partials/nav') %>
    <main class="container mx-auto p-8 mt-4">
      <h2 class="text-3xl text-blue-500 font-bold text-center mb-6">
        Here are All Favourite Homes
      </h2>
      <% if (homes.length > 0) { %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
        <% homes.forEach(home => { %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-300 w-full">
            <div class="relative">
              <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-40 md:h-48 object-cover rounded-lg">
              <% if (home.isFeatured) { %>
                <div class="absolute top-3 left-3 bg-white text-sm px-3 py-1 rounded-full shadow">Guest favourite</div>
              <% } %>
            </div>
            <div class="p-4">
              <div class="flex justify-between items-start">
                <h3 class="text-lg font-semibold text-gray-800"><%= home.houseName %></h3>
                <div class="flex items-center text-sm text-gray-700">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4 text-yellow-400 mr-1">
                    <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                  </svg>
                  <span class="font-medium"><%= home.rating %></span>
                </div>
              </div>
              <p class="text-gray-600 text-sm mt-1 truncate"><%= home.location %></p>
              <div class="mt-4 flex items-end justify-between">
                <div class="text-sm text-gray-500">
                  <div class="text-base font-semibold text-gray-900">â‚¹<%= home.price %> <span class="text-xs text-gray-500">for 5 nights</span></div>
                </div>
                <div class="flex items-center gap-4 ">
                  <a href="/homes/<%= home._id %>" class="border border-gray-300 text-gray-800 px-6 py-2 mx-6 rounded-md hover:shadow">Details</a>
                  <form method="POST" action="/fav/delete" class="inline">
                    <input type="hidden" name="homeId" value="<%= home._id %>">
                    <button type="submit" class="border border-red-300 text-red-700 px-6 py-2 mx-6 rounded-md hover:bg-red-50">Remove</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
        </div>
      <% } else { %>
        <p class="text-center text-gray-500">No homes registered yet.</p>
      <% } %>
    </main>
  </body>
</html>
