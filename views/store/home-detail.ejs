<%- include('../partials/head') %>
  </head>
  <body class="bg-gray-100">
    <%- include('../partials/nav') %>
    <main class="container mx-auto p-8 mt-10">
      <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-lg p-6">
        <a href="/homes" class="text-blue-500 hover:underline mb-4 inline-block">← Back to Homes</a>
        <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-96 object-cover rounded-lg mb-6">
        <h1 class="text-4xl font-bold text-gray-900 mb-4"><%= home.houseName %></h1>
        
        <div class="flex justify-between items-start mb-6">
          <div>
            <p class="text-gray-600 text-lg mb-2"><i class="fas fa-map-marker-alt mr-2"></i><%= home.location %></p>
            <div class="flex items-center space-x-2">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-yellow-400">
                <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
              </svg>
              <span class="text-lg font-semibold text-gray-800"><%= home.rating %> </span>
            </div>
          </div>
          <div class="text-right">
            <p class="text-3xl font-bold text-gray-900">₹<%= home.price %></p>
            <p class="text-gray-500">for 5 nights</p>
          </div>
          </div>
           
        
        <% if (isLoggedIn) { %>
           <div class="mb-6">
          <a href="/rules/<%= home._id %>" class="text-2xl  text-blue-500  hover:text-blue-800 mb-2">Rules</a>

            
        </div>
          <button class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600">Book Now</button>
        <% } else { %>
          <a href="/auth/login" class="block w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600 text-center">Login to Book</a>
        <% } %>
      
        
        <div class="bg-gray-50 p-4 rounded-lg">
          <h2 class="text-xl font-semibold text-gray-800 mb-2">About this home</h2>
          <p class="text-gray-600">This is a wonderful home located in <%= home.location %>. Perfect for your next getaway!</p>
        </div>
      </div>
    </main>
  </body>
</html>
