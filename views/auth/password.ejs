<%- include('../partials/head') %>
</head>
<body class="bg-gradient-to-br from-blue-50 via-purple-50 to-pink-50 min-h-screen">
	<%- include('../partials/nav') %>
	<main class="container mx-auto mt-16 px-4 flex justify-center items-center">
		<div class="w-full max-w-md">
			<div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-2xl p-8 border border-gray-100">
				<!-- Header -->
				<div class="text-center mb-8">
					<div class="inline-block p-3 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full mb-4">
						<svg class="h-6 w-6 text-white" fill="currentColor" viewBox="0 0 24 24">
							<path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
						</svg>
					</div>
					<h1 class="text-3xl font-bold bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent mb-2">Reset Password</h1>
					<p class="text-gray-500 text-sm">Enter your email to receive a password reset link</p>
				</div>

				<!-- Form -->
				<form action="/auth/reset-password" method="POST" class="space-y-5">
					<%- include('../partials/message') %>
					
					<!-- Email Field -->
				<div class="space-y-2 mb-6">
						<label class="block text-sm font-semibold text-gray-700">Email Address</label>
						<div class="relative">
							<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
								<!-- <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
								</svg> -->
							</div>
							<input 
								name="email" 
								type="email" 
								required 
								placeholder="Enter your email"
								class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition text-gray-900 placeholder-gray-400" 
							/>
						</div>
					</div>

					<!-- Submit Button -->
					<button 
						type="submit"
					  
						class="mt-1 block w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 text-black shadow-md" >
						Reset Password
					</button>
				<div class="mt-6 text-center">
					<p class="text-gray-600 text-sm">
						Remember your password? 
						<a href="/auth/login" class="font-semibold text-purple-600 hover:text-pink-600 transition">
							Back to login
						</a>
					</p>
				</div>
			</div>
			
		</div>
	</main>
</body>
</html>