<%- include('../partials/head') %>
  </head>
  <body class="bg-gray-100">
    <%- include('../partials/nav') %>
    <main class="container mx-auto mt-10 max-w-xl">
      <div class="bg-white rounded-lg shadow-lg p-8">
        <h1 class="text-3xl font-bold mb-6 text-center text-blue-500"><%= editing ? "Edit" : "Add" %> 
          Your Home on Airbnb</h1>
        <form action="/host/<%= editing ? 'edit-home' : 'add-home' %>" method="POST" enctype="multipart/form-data" class="max-w-md mx-auto">
          <div class="mb-4">
            <label for="houseName" class="block text-gray-700 text-sm font-bold mb-2"></label>
                 <input type="hidden" name="id" value="<%= editing ? home._id :  '' %>" />
            <input
              type="text"
              id="houseName"
              value="<%= editing ? home.houseName :  '' %>"
              name="houseName"
              placeholder="Enter your House Name"
              class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
            <input
              type="text"
              id="price"
               value="<%= editing ? home.price :  '' %>"
              name="price"
              placeholder="Enter price"
              class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
            <input
              type="text"
              id="location"
               value="<%= editing ? home.location :  '' %>"
              name="location"
              placeholder="Enter Address"
              class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
            <input
              type="text"
              id="rating"
               value="<%= editing ? home.rating :  '' %>"
              name="rating"
              placeholder="Enter rating"
              class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
            <input
              type="file"
              name="photo"
              placeholder="Upload Photo"
              class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
               <input
              type="text"
              id="description"
               value="<%= editing ? home.description :  '' %>"
              name="description"
              placeholder="Enter description"
              class="w-full px-4 py-2  border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
          </div>
          <div class="text-center">
            <input type="submit" value="<%= editing ? 'Update' : 'Add' %> Home" class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600 transition duration-300" />
          </div>
        </form>
      </div>
    </main>
  </body>
</html>
